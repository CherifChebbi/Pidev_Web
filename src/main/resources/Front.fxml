<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>

<Pane prefHeight="700.0" prefWidth="884.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FrontManagement">

    <!-- Background Rectangle -->
    <Rectangle fill="#F4F4F4" height="700.0" width="884.0" />

    <!-- Search Fields -->
    <Label layoutX="20.0" layoutY="39.0" text="Rechercher les restaurants :" />
    <TextField fx:id="searchNameField" layoutX="20.0" layoutY="60.0" prefHeight="25.0" prefWidth="90.0" promptText="Nom" />
    <TextField fx:id="searchLocationField" layoutX="133.0" layoutY="60.0" prefHeight="25.0" prefWidth="90.0" promptText="Localisation" />
    <Button layoutX="248.0" layoutY="58.0" mnemonicParsing="false" onAction="#search" text="Search" />

    <!-- Result Display ScrollPane -->
    <ScrollPane layoutX="12.0" layoutY="100.0" prefHeight="580.0" prefWidth="859.0">
        <content>
            <!-- GridPane to display search results -->
            <GridPane fx:id="gridPane" hgap="20" style="-fx-padding: 0;" vgap="20">
            <padding>
               <Insets left="10.0" />
            </padding></GridPane>
        </content>
    </ScrollPane>

    <stylesheets>
        <URL value="@FrontManagement.css" />
    </stylesheets>
</Pane>
